/* pages/tongji/tongji.wxss */

.page {
    width: 100%;
    height: 100%;
}

.header {
    height: 318rpx;
    width: 100%;
    background-color: #fff;
    border-bottom: 20rpx solid #f5f5f5;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
}

.header-left {
    height: 171rpx;
    width: 45%;
    border-right: 1px solid #f5f5f5;
    margin: 70rpx;
    color: #b0b0b0;
}

.header-right {
    height: 171rpx;
    width: 45%;
    margin: 70rpx auto;
    color: #b0b0b0;
}

.num {
    color: red;
    font-size: 80rpx;
    margin: 40rpx 70rpx;
}

/* 页面内容 */

.content {
    height: 760rpx;
    width: 100%;
    background-color: #fff;
}

.content-header {
    height: 160rpx;
    width: 95%;
    border-bottom: 1px solid #b0b0b0;
    margin: auto 20rpx;
}

.header-title {
    margin-top: 30rpx;
    font-size: 60rpx;
}
.header-date{
    font-size: 40rpx;
    color: #b0b0b0;
}
.header-dec {
    float: right;
    margin-top: -100rpx;
    font-size: 50rpx;
}
.content-ridus{
    margin: 90rpx auto;
    height: 300rpx;
    width: 300rpx;
    border: 50rpx solid #f5f5f5;
    border-radius: 50%;
    text-align: center;
}
.ridus-num{
    position: relative;
    top: 40%;
    font-size: 60rpx;
    font-weight: bold;

}
.content-list{
    width: 100%;
    margin: 80rpx auto;
    height: 40rpx;
}
/*引入图标 */
@import "../../icon1/iconfont.wxss";