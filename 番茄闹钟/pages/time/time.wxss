/* pages/time/time.wxss */

/* 第一步将页面初始化 */

.page {
    width: 100%;
    height: 100%;
}

/* 页面的头部 */

.header {
    width: 100%;
    height: 200rpx;
    margin-top: 175rpx;
    text-align: center;
    /* 让文字水平居中*/
}

.header-title {
    font-size: 45rpx;
    color: #000000;
}

.header-title2 {
    font-size: 30rpx;
    color: #b0b0b0;
    margin-top: 48rpx;
}

/* 页面内容部分 */

.content {
    width: 95%;
    height: 708rpx;
    margin: 0 20rpx;
}

.content-top {
    height: 354rpx;
    border-bottom: 1px solid #b0b0b0;
    flex-direction: row;
    flex-wrap: nowrap;
    display: flex;
    text-align: center;
}

.content-top1 {
    height: 354rpx;
    flex-direction: row;
    flex-wrap: nowrap;
    display: flex;
    text-align: center;
}

/* 引入图标 */

@import "../../icon/iconfont.wxss";
.top {
    width: 33%;
}

.top1, .top2 {
    border-right: 1px solid #b0b0b0;
}

.iconfont {
    position: absolute;
    margin-top: 104rpx;
    margin-left: -20rpx;
}

.dec {
    position: absolute;
    margin-top: 200rpx;
    margin-left: -20rpx;
}
.content-top .top1.on{
  
    border-bottom: solid 2px #8dceff;
}
.content-top .top2.on{
  
    border-bottom: solid 2px #5ab729;
}

/* 页面按钮部分 */

.footer {
    width: 100%;
    margin: 144rpx auto;
}

.footer-btn {
    width: 428rpx;
    height: 144rpx;
    border: 1px solid #6078ab;
    border-radius: 80rpx;
    position: relative;
    left: 25%;
    top: 50%;
}

.btn-content {
    position: relative;
    left: 40%;
    top: 30%;
    color: #6078ab;
}