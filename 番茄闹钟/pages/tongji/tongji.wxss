/* pages/tongji/tongji.wxss */

.page {
    width: 100%;
    height: 100%;
}

.heade {
    height: 318rpx;
    width: 100%;
    background-color: #fff;
    border-bottom: 20rpx solid #f5f5f5;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
}

.header-left {
    height: 171rpx;
    width: 45%;
    border-right: 1px solid #f5f5f5;
    margin: 70rpx;
    color: #b0b0b0;
}

.header-right {
    height: 171rpx;
    width: 45%;
    margin: 70rpx auto;
    color: #b0b0b0;
}

.num {
    color: red;
    font-size: 80rpx;
    margin: 40rpx 70rpx;
}

/* 页面内容 */

.content {
    height: 850rpx;
    width: 100%;
    background-color: #fff;
    border-bottom: 30rpx solid #f5f5f5;
}

.content-header {
    height: 160rpx;
    width: 95%;
    border-bottom: 1px solid #b0b0b0;
    margin: auto 20rpx;
}

.header-title {
    margin-top: 30rpx;
    font-size: 60rpx;
}

.header-date {
    font-size: 40rpx;
    color: #b0b0b0;
}

.header-dec {
    float: right;
    margin-top: -100rpx;
    font-size: 50rpx;
}

.content-ridus {
    margin: 90rpx auto;
    height: 300rpx;
    width: 300rpx;
    border: 50rpx solid #f5f5f5;
    border-radius: 50%;
    text-align: center;
}

.ridus-num {
    position: relative;
    top: 40%;
    font-size: 60rpx;
    font-weight: bold;
}

.content-list {
    width: 100%;
    margin: 80rpx auto;
    height: 40rpx;
    display: flex;
    flex-direction: row;

}
.nav{
    margin: 0 auto;
    padding: 20rpx;
}

/*引入图标 */

@import "../../icon1/iconfont.wxss";
.name {
    font-size: 30rpx;
    color: #b0b0b0;
}

/* 页面尾部 */
.footer{
    width: 100%;
    height: 800rpx;
}
.footer-title{
    height: 160rpx;
    width: 95%;
    border-bottom: 1px solid #b0b0b0;
    margin: auto 20rpx;
}
/* 日历的实现 */
.date-show{
    position: relative;
    width: 250rpx;
    font-family: PingFang-SC-Regular;
    font-size: 40rpx;
    color: #282828;
    text-align: center;
    margin: 59rpx auto 10rpx;
}
.lt-arrow,.rt-arrow{
    position: absolute;
    top: 1rpx;
    width: 60rpx;
    height: 60rpx;
  padding-right: 0.6rem;
}
.lt-arrow image,.rt-arrow image{
    width: 40rpx;
    height: 40rpx;
}
.lt-arrow{
    left: -110rpx;
    /* transform: rotate(180deg); */
}
.rt-arrow{
    right: -100rpx;
}
.header{
    font-size: 0;
    padding: 0 24rpx;
}
.header>view{
    display: inline-block;
    width: 14.285%;
    color: #333;
    font-size: 30rpx;
    text-align: center;
    border-bottom: 1px solid #D0D0D0;
    padding: 39rpx 0;
}
.weekMark{
    position: relative;
}
.weekMark view{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    border-bottom: 1px solid #22A7F6;
}
.date-box{
    font-size: 0;
    padding: 10rpx 0;
}
.date-box>view{
    position: relative;
    display: inline-block;
    width: 14.285%;
    color: #020202;
    font-size: 40rpx;
    text-align: center;
    vertical-align: middle;
    margin: 15rpx 0;
}
.date-head{
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
}
.nowDay .date-head{
    width: 60rpx;
    border-radius: 50%;
    text-align: center;
    color: #fff;
    background-color: #22A7F6;
    margin: 0 auto;
}
.date-weight{
    font-size: 22rpx;
    padding: 15rpx 0;
}
.nowDay .date-weight{
    color: #22A7F6;
}
.one{
    position: absolute;
    bottom: 0;
    right: 5rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: red;
}
.two{
    position: absolute;
    bottom: 30rpx;
    right: 5rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: blue;
}