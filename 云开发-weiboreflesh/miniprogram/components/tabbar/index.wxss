/* components/tabbar/index.wxss */
.weibo-tabbar{
    z-index: 99;
    bottom: 0;
    height: 97rpx;
    padding: 12rpx 0;
    display: flex;
    width: 100%;
    position: fixed;/* 相当于屏幕定位*/
    background-color: #ffffff;
    box-sizing: border-box;
}
.weibo-tabbar::after{
    content: '';
    position: absolute;
    width: 200%;
    height: 200%;
    top: 0;
    left: 0;
    border-top: 1px solid rgba(177,177,177,.5);
    transform: scale(.5);
    transform-origin: 0 0;
}
.weibo-tabbar .item-left, .item-right{
    display: flex;
    width: 50%;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    font-size: 20rpx;
    color: #b1b1b1;
    z-index: 99;
}
.shouye, .wode{
    height: 45rpx;
    width: 45rpx;
}